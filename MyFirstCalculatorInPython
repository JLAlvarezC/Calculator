while True:
    print("\n\n### Bienvenido a la Calculadora en Phyton ###\n")
    print("Elige una Opción:\n\n1 Suma\n2 Resta\n3 Multiplicación\n4 División\n5 Potencias\n6 Raices\n\nSi no deseas continuar, escribe 0\n")   
    x=input()
    if x == '0':
        break
    x=int(x)
    if x == 1:
        print("\nHas Elegido Suma...\nIngresa el primer dato: ")
        a=int(input())
        print("Ingresa el segundo dato: ")
        b=int(input())
        print("El resultado de la suma es", a+b)
    elif x == 2:
        print("\nHas Elegido Resta...\nIngresa el primer dato: ")
        a=int(input())
        print("Ingresa el segundo dato: ")
        b=int(input())
        print("El resultado de la resta es", a-b)
    elif x == 3:
        print("\nHas Elegido Multiplicación...\nIngresa el primer dato: ")
        a=int(input())
        print("Ingresa el segundo dato: ")
        b=int(input())
        print("El resultado de la resta es", a*b)   
    elif x == 4:
        print("\nHas Elegido División...\nIngresa el primer dato: ")
        a=int(input())
        print("Ingresa el segundo dato: ")
        b=int(input())
        if b == 0:
            print("La división entre 0 es inderteminada. NO se puede realizar la Operacion")
            break
        print("El resultado de la division es", a/b)
    elif x == 5:
        print("\nHas Elegido Potencias...\nIngresa la base:")
        a=int(input())
        print("Ingresa el Exponente:")
        b=int(input())
        print("La potencia es", a**b)   
    elif x == 6:
        print("\nHas Elegido Raices...\nIngresa la base: ")
        a=int(input())
        print("Ingresa la raiz: ")
        b=int(input())
        if a < 0 and b == 2:
           print("La raíz cuadrada de un número negativo es número complejo")
           break
        print("El resultado de la raiz es", a**(1/b))
    else:
        print("\nHas elegido una opcion invalida, vuelve a intentarlo... \n")
